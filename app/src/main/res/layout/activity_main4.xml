<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <EditText
        android:id="@+id/et_main4_first"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="-127" />

    <EditText
        android:id="@+id/et_main4_second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="-127"
        app:layout_constraintTop_toBottomOf="@id/et_main4_first" />

    <LinearLayout
        android:id="@+id/ll_main4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/et_main4_second">

        <Button
            android:id="@+id/btn_main4_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="加" />

        <Button
            android:id="@+id/btn_main4_subtract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="减" />

        <Button
            android:id="@+id/btn_main4_multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="乘" />

        <Button
            android:id="@+id/btn_main4_divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="除" />

        <Button
            android:id="@+id/btn_main4_remainder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="余数" />

        <Button
            android:id="@+id/btn_main4_firstround"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="r先" />

        <Button
            android:id="@+id/btn_main4_roundString"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="r后" />

        <Button
            android:id="@+id/btn_main4_compare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="比较" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="156dp"

        tools:layout_editor_absoluteX="47dp" />

</android.support.constraint.ConstraintLayout>